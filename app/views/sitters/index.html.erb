<section id="index">

    <div class='container'>
    <h1 class="text-center pt-3">Pet Sitters</h1>
    		  		<div class="bg-white p-4">
<%= form_with scope: :sitter, url: search_path, local: true do |form| %>
 		<div class="form-inline">
  			<div class="form-group">
  				<%= form.label :Start_date %>: <br>
  				<%= form.text_field :available_start_date , :type=>"date", :class=>"form-control ml-3 mr-3", :min=> Date.today%>
  		</div>
  		  			<div class="form-group">
  				<%= form.label :End_date %>: <br>
  				<%= form.text_field :available_end_date , :type=>"date", :class=>"form-control ml-3 mr-3", :min=> Date.today%>
  		</div>
		 		<div class="actions">
		  			<%= form.submit "Search", :class=> "btn btn-outline-success" %>
		  		</div>
		  		<div class="ml-3 mr-3">
  		  		<%= @msg%>
  		  	</div>
  		  	</div>
  		  		</div>
<% end %>


        <div class="row mt-2 d-flex justify-content-center">
            <% @sitters.each do |sitter| %>
            <div class="col-12 col-md-4 mt-4">
                <div class="card profile-card-5">
                    <div class="card-img-block">
                        <img src='<%= sitter.picture %>' class="card-img-top" alt="Card image cap">
                    </div>
                    <div class="card-body pt-0">
                        <h5 class="card-title"><%= sitter.user.username %></h5>
                        <h3 class="card-text text-right text-muted">$<%= sitter.price %></h3>
                    </div>
                    <a href='/sitters/<%= sitter.id %>' class='btn btn-success'>See Profile</a>
                </div>

            </div>
            <% end  %>
    </div>
    </div>



</section>