<div class="container h-100">
  <h1>Hi! I am <%= @sitter.user.username%> <span style="font-size:20px">
      <div class="row justify-content-center align-self-center">
        <div class="col mx-auto">
          <img src='<%= @sitter.picture %>' alt="..." class='img-responsive' style="width:25%">

          <h5>Preferred Animals:</p>
            <ul>
              <% @sitter.pets.each do |pet| %>
              <li style='display: inline;'>‚óè <%= pet.animal %>s</li>
              <% end %>
            </ul>
            <p>
              <h4 style="display:inline-block">Price: </h4><span> <%= @sitter.price%></span>
            </p>

            <%# display only if there are timeslots  %>
            <% if !@sitter.timeslots.empty? %>
            <h4>Available Dates</h4>
            <% if @sitter.timeslots.length > 0 %>
            <%= link_to 'Book', new_booking_path, :class => 'btn btn-primary' %>
            <% end %>
            <% @sitter.timeslots.each do |t| %>
            <p><%= t.available_start_date.strftime("%d %b %Y")%> to <%= t.available_end_date.strftime("%d %b %Y")%></p>
            <% end %>
            <% end %>

        </div>
        <div class="col mx-1 my-1">
          <div class="container-fluid h-100">

            <iframe width="100%" height="100%" frameborder="0" style="border:0" class="img-responsive"
              src="https://www.google.com/maps/embed/v1/search?q=<%= @sitter.location.gsub(/\s+/, '+') %>,+Singapore&key=..."
              allowfullscreen></iframe>
            <!-- <%=image_tag "https://joomly.net/frontend/web/images/googlemap/map.png", :class =>'img-responsive', :style=>"width:100%;"%> -->
          </div>
        </div>
      </div>
      <div class="row justify-content-center align-self-center mt-5">
        <h4>About me</h4>
        <p><%= @sitter.description%></p>
      </div>
</div>